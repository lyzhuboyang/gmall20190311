<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zby.gmall.manageservice.mapper.BaseAttrInfoMapper">
    <!-- id:表示唯一编号 -->
    <!-- type:结果集的返回数据   -->
    <!-- autoMapping="true"自动映射   -->
    <resultMap id="baseAttrInfoMap" type="com.zby.gmall.bean.BaseAttrInfo" autoMapping="true">
        <!--
            表示主键
                property:实体类属性名
                column：数据库字段名
            -->
        <id property="id" column="id"></id>
        <!--   普通字段     -->
        <!--        <result property="attrName" column="attr_name"></result>-->
        <!--  mybatis如何配置1对多
            ofType当前属性返回的数据类型
        -->
        <collection property="attrValueList" ofType="com.zby.gmall.bean.BaseAttrValue" autoMapping="true">
            <!--   如果有重名，可以给字段起别名         -->
            <id property="id" column="attr_value_id"></id>
        </collection>


        <!--  mybatis如何配置多对1          -->
        <!--        <association property=""></association>-->
    </resultMap>

    <!--  resultType：直接返回数据类型   resultMap 引用返回的结果街映射 -->
    <select id="getBaseAttrInfoListByCatalog3Id" resultMap="baseAttrInfoMap">
        SELECT
        bai.id,
        bai.attr_name,
        bai.catalog3_id,
        bav.id attr_value_id,
        bav.value_name,
        bav.attr_id
        FROM
        base_attr_info bai
        INNER JOIN base_attr_value bav ON bai.id = bav.attr_id
        WHERE
        catalog3_id = #{catalog3Id}
    </select>

    <!--  $ # 区别？
    $代表变量
    #代表？
    -->
    <select id="selectAttrInfoListByIds" resultMap="baseAttrInfoMap">
        SELECT
        ai.id,
        ai.attr_name,
        ai.catalog3_id,
        av.id attr_value_id,
        av.attr_id,
        av.value_name
        FROM base_attr_info ai
        INNER JOIN base_attr_value av
        ON ai.id=av.attr_id
        WHERE av.id IN (${valueIds})
    </select>

</mapper>